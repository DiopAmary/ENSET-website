{% extends "base.html.twig" %}

{% block title %}Accueil{% endblock %}

{% block stylesheets %}
    <link rel="stylesheet" href="{{ asset('styles/actu.css') }}">
    <link rel="stylesheet" href="{{ asset('styles/chiffres.css') }}">
    <link rel="stylesheet" href="{{ asset('styles/ado.css') }}">
{% endblock %}

{% block body %}
    <div id="carouselExampleIndicators" class="carousel slide" data-ride="carousel">
        <ol class="carousel-indicators">
            <li data-target="#carouselExampleIndicators" data-slide-to="0" class="active"></li>
            <li data-target="#carouselExampleIndicators" data-slide-to="1"></li>
            <li data-target="#carouselExampleIndicators" data-slide-to="2"></li>
        </ol>
        <div class="carousel-inner">
            <div class="carousel-item active">
            <img src="http://placehold.it/1600x450" class="d-block w-100" alt="...">
            </div>
            <div class="carousel-item">
            <img src="http://placehold.it/1600x450" class="d-block w-100" alt="...">
            </div>
            <div class="carousel-item">
            <img src="http://placehold.it/1600x450" class="d-block w-100" alt="...">
            </div>
        </div>
        <a class="carousel-control-prev" href="#carouselExampleIndicators" role="button" data-slide="prev">
            <span class="carousel-control-prev-icon" aria-hidden="true"></span>
            <span class="sr-only">Previous</span>
        </a>
        <a class="carousel-control-next" href="#carouselExampleIndicators" role="button" data-slide="next">
            <span class="carousel-control-next-icon" aria-hidden="true"></span>
            <span class="sr-only">Next</span>
        </a>
     </div>
    <div class="articles">
        <h1><a href="{{ path('actualites') }}">Actualités</a></h1>
        <span class="bar"></span>
        <div class="liste">
             {%  for article in articles %}
                <div class="actu">
                    <div class="image">
                        <div class="logo">
                            <img src="{{ asset('images/logo.png') }}" alt="logo">
                        </div>
                        <div class="icon">
                            <img src="{{ asset('images/news.png') }}" alt="icon">
                        </div>
                        <div class="date">{{ article.createdAt | date('d/m/Y') }}</div>
                    </div>
                    <div class="title">{{ article.title }}</div>
                    <div class="bas">
                        <div class="readmore"><a href="{{ path('actu_show', {'id': article.id}) }}">Lire plus</a></div>
                    </div>
                </div>
             {%  endfor %}
        </div>
    </div>

    <div class="appelDOffre">
        <h1><a href="{{ asset('appel_offre') }}">Appels d'offres</a></h1>
        <span class="bar"></span>
        <div class="liste">
            {% for ado in appelDOffre %}
                <div class="boite">
                    <div class="content">
                        <a href="{{ path('ado_show', {'id': ado.id}) }}">{{ ado.Title }}</a>
                    </div>
                </div>
            {% endfor %}
        </div>
    </div>

    <div class="ensetChiffre">
        <h1>ENSET en chiffres</h1>
        <span></span>
        <div class="chiff">
            <div><p>{{ chiffres[0].etudiants }}</p><p>Etudiants</p></div>
            <div><p>{{ chiffres[0].enseignants }}</p><p>Enseignants</p></div>
            <div><p>{{ chiffres[0].departements }}</p><p>Départements</p></div>
            <div><p>{{ chiffres[0].laureats }}</p><p>Lauréats</p></div>
            <div><p>{{ chiffres[0].doctorant }}</p><p>Doctorants</p></div>
            <div><p>{{ chiffres[0].labo }}</p><p>Laboratoires</p></div>
            <div><p>{{ chiffres[0].DUT }}</p><p>DUT</p></div>
            <div><p>{{ chiffres[0].partenaires }}</p><p>Partenaires</p></div>
            <div><p>{{ chiffres[0].centreRecherches }}</p><p>Centres de recherches</p></div>
            <div><p>{{ chiffres[0].fi }}</p><p>filières ingénieur</p></div>
            <div><p>{{ chiffres[0].lp }}</p><p>Licences professionnelle</p></div>
            <div><p>{{ chiffres[0].lu }}</p><p>Licences d'université</p></div>
            <div><p>{{ chiffres[0].mu }}</p><p>Masters d'université</p></div>
        </div>
    </div>
{% endblock %}



